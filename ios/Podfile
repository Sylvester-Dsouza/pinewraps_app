# Uncomment this line to define a global platform for your project
platform :ios, '12.0'

# CocoaPods analytics sends network stats synchronously affecting flutter build latency.
ENV['COCOAPODS_DISABLE_STATS'] = 'true'

project 'Runner', {
  'Debug' => :debug,
  'Profile' => :release,
  'Release' => :release,
}

def flutter_root
  generated_xcode_build_settings_path = File.expand_path(File.join('..', 'Flutter', 'Generated.xcconfig'), __FILE__)
  unless File.exist?(generated_xcode_build_settings_path)
    raise "#{generated_xcode_build_settings_path} must exist. If you're running pod install manually, make sure flutter pub get is executed first"
  end

  File.foreach(generated_xcode_build_settings_path) do |line|
    matches = line.match(/FLUTTER_ROOT\=(.*)/)
    return matches[1].strip if matches
  end
  raise "FLUTTER_ROOT not found in #{generated_xcode_build_settings_path}. Try deleting Generated.xcconfig, then run flutter pub get"
end

require File.expand_path(File.join('packages', 'flutter_tools', 'bin', 'podhelper'), flutter_root)

flutter_ios_podfile_setup

target 'Runner' do
  use_frameworks!
  use_modular_headers!

  flutter_install_all_ios_pods File.dirname(File.realpath(__FILE__))
  
  # Firebase dependencies with modular headers
  pod 'Firebase', :modular_headers => true
  pod 'FirebaseCore', :modular_headers => true
  pod 'FirebaseMessaging', :modular_headers => true
  pod 'GoogleUtilities', :modular_headers => true
  pod 'GoogleDataTransport', :modular_headers => true
  
  post_install do |installer|
    # Disable code signing for all privacy bundles
    installer.pods_project.targets.each do |target|
      if target.name.end_with?('_privacy') || target.name.end_with?('-privacy') || target.name.end_with?('Privacy') || target.name.include?('privacy')
        target.build_configurations.each do |config|
          config.build_settings['CODE_SIGNING_ALLOWED'] = 'NO'
          config.build_settings['CODE_SIGNING_REQUIRED'] = 'NO'
          config.build_settings['CODE_SIGN_IDENTITY'] = ''
          config.build_settings['EXPANDED_CODE_SIGN_IDENTITY'] = ''
          config.build_settings['ENABLE_BITCODE'] = 'NO'
          config.build_settings['EXCLUDED_SOURCE_FILE_NAMES'] = '*'
          config.build_settings['SKIP_INSTALL'] = 'YES'
          config.build_settings['SWIFT_VERSION'] = '5.0'
        end
      end
    end
    
    installer.pods_project.targets.each do |target|
      flutter_additional_ios_build_settings(target)
      
      # Enable Swift support for all targets
      target.build_configurations.each do |config|
        config.build_settings['SWIFT_VERSION'] = '5.0'
        config.build_settings['ENABLE_BITCODE'] = 'NO'
        
        # Set deployment target for all targets
        config.build_settings['IPHONEOS_DEPLOYMENT_TARGET'] = '12.0'
        
        # Ensure Swift standard libraries are embedded
        config.build_settings['ALWAYS_EMBED_SWIFT_STANDARD_LIBRARIES'] = 'YES'
        
        # Ensure Swift modules are embedded
        config.build_settings['LD_RUNPATH_SEARCH_PATHS'] ||= [
          '$(inherited)',
          '@executable_path/Frameworks',
          '@loader_path/Frameworks'
        ]
        
        # Fix for webview_flutter_wkwebview_privacy.bundle
        if target.name == 'webview_flutter_wkwebview-webview_flutter_wkwebview_privacy'
          config.build_settings['WRAPPER_EXTENSION'] = 'bundle'
          config.build_settings['MACH_O_TYPE'] = 'mh_bundle'
          config.build_settings['SKIP_INSTALL'] = 'YES'
          config.build_settings['CODE_SIGNING_ALLOWED'] = 'NO'
          config.build_settings['CODE_SIGNING_REQUIRED'] = 'NO'
          config.build_settings['CODE_SIGN_IDENTITY'] = ''
        end
        
        # Fix for url_launcher_ios_privacy.bundle
        if target.name == 'url_launcher_ios-url_launcher_ios_privacy'
          config.build_settings['WRAPPER_EXTENSION'] = 'bundle'
          config.build_settings['MACH_O_TYPE'] = 'mh_bundle'
          config.build_settings['SKIP_INSTALL'] = 'YES'
          config.build_settings['CODE_SIGNING_ALLOWED'] = 'NO'
          config.build_settings['CODE_SIGNING_REQUIRED'] = 'NO'
          config.build_settings['CODE_SIGN_IDENTITY'] = ''
        end
        
        # Fix for sign_in_with_apple plugin
        if target.name == 'sign_in_with_apple'
          config.build_settings['BUILD_LIBRARY_FOR_DISTRIBUTION'] = 'YES'
        end
      end
    end
  end
end

target 'RunnerTests' do
  inherit! :search_paths
end
