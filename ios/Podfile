platform :ios, '12.0'

# CocoaPods analytics sends network stats synchronously affecting flutter build latency.
ENV['COCOAPODS_DISABLE_STATS'] = 'true'

project 'Runner', {
  'Debug' => :debug,
  'Profile' => :release,
  'Release' => :release,
}

def flutter_root
  generated_xcode_build_settings_path = File.expand_path(File.join('..', 'Flutter', 'Generated.xcconfig'), __FILE__)
  unless File.exist?(generated_xcode_build_settings_path)
    raise "#{generated_xcode_build_settings_path} must exist. If you're running pod install manually, make sure flutter pub get is executed first"
  end

  File.foreach(generated_xcode_build_settings_path) do |line|
    matches = line.match(/FLUTTER_ROOT\=(.*)/)
    return matches[1].strip if matches
  end
  raise "FLUTTER_ROOT not found in #{generated_xcode_build_settings_path}. Try deleting Generated.xcconfig, then run flutter pub get"
end

require File.expand_path(File.join('packages', 'flutter_tools', 'bin', 'podhelper'), flutter_root)

flutter_ios_podfile_setup

# Prevent Pods from creating privacy bundles
pre_install do |installer|
  # Disable transitive dependency validation
  Pod::Installer::Xcode::TargetValidator.send(:define_method, :verify_no_static_framework_transitive_dependencies) {}
  
  installer.pod_targets.each do |pod|
    if pod.name.end_with?('_privacy') || pod.name.end_with?('-privacy') || pod.name.end_with?('Privacy') || pod.name.include?('privacy')
      def pod.build_type; Pod::BuildType.static_library; end
      def pod.should_build?; false; end
      def pod.should_build_framework?; false; end
      def pod.should_build_static_framework?; false; end
      def pod.build_settings; {}; end
      def pod.framework_paths; []; end
      def pod.library_paths; []; end
      def pod.resource_paths; []; end
      def pod.vendored_frameworks; []; end
      def pod.vendored_libraries; []; end
      def pod.resource_bundles; {}; end
      def pod.should_build_static_library?; false; end
      def pod.dependent_targets; []; end
      def pod.recursive_dependent_targets; []; end
    end
  end
end

target 'Runner' do
  use_frameworks! :linkage => :static
  use_modular_headers!

  flutter_install_all_ios_pods File.dirname(File.realpath(__FILE__))
  
  # Firebase dependencies with modular headers
  pod 'Firebase', :modular_headers => true
  pod 'FirebaseCore', :modular_headers => true
  pod 'FirebaseMessaging', :modular_headers => true
  pod 'GoogleUtilities', :modular_headers => true
  pod 'GoogleDataTransport', :modular_headers => true
  
  post_install do |installer|
    installer.pods_project.targets.each do |target|
      target.build_configurations.each do |config|
        # Ensure proper deployment target
        config.build_settings['IPHONEOS_DEPLOYMENT_TARGET'] = '12.0'
        
        # Disable bitcode for all targets
        config.build_settings['ENABLE_BITCODE'] = 'NO'
        
        # Force static linking for all pods
        config.build_settings['MACH_O_TYPE'] = 'staticlib'
        
        # Ensure proper Swift version
        if config.build_settings['SWIFT_VERSION'].nil?
          config.build_settings['SWIFT_VERSION'] = '5.0'
        end
        
        # Handle privacy bundles
        if target.name.end_with?('_privacy') || target.name.end_with?('-privacy') || target.name.end_with?('Privacy')
          # Remove all build settings that could trigger Swift library copying
          config.build_settings.delete('SWIFT_VERSION')
          config.build_settings.delete('SWIFT_OPTIMIZATION_LEVEL')
          config.build_settings.delete('SWIFT_COMPILATION_MODE')
          config.build_settings.delete('SWIFT_OBJC_BRIDGING_HEADER')
          config.build_settings.delete('SWIFT_OBJC_INTERFACE_HEADER_NAME')
          config.build_settings.delete('SWIFT_PRECOMPILE_BRIDGING_HEADER')
          
          # Disable Swift-related settings
          config.build_settings['SWIFT_INSTALL_OBJC_HEADER'] = 'NO'
          config.build_settings['SWIFT_OBJC_INTERFACE_HEADER_NAME'] = ''
          config.build_settings['CLANG_ENABLE_MODULES'] = 'NO'
          config.build_settings['DEFINES_MODULE'] = 'NO'
          config.build_settings['DEAD_CODE_STRIPPING'] = 'YES'
          config.build_settings['ONLY_ACTIVE_ARCH'] = 'NO'
          config.build_settings['ENABLE_TESTABILITY'] = 'NO'
          config.build_settings['DYLIB_INSTALL_NAME_BASE'] = ''
          config.build_settings['STRIP_INSTALLED_PRODUCT'] = 'YES'
          config.build_settings['DEPLOYMENT_POSTPROCESSING'] = 'YES'
          config.build_settings['SKIP_INSTALL'] = 'YES'
          config.build_settings['COPY_PHASE_STRIP'] = 'YES'
          config.build_settings['STRIP_STYLE'] = 'non-global'
          config.build_settings['SEPARATE_STRIP'] = 'YES'
          config.build_settings['EXCLUDED_SOURCE_FILE_NAMES'] = '*'
          config.build_settings['CLANG_ENABLE_MODULE_DEBUGGING'] = 'NO'
          config.build_settings['GCC_OPTIMIZATION_LEVEL'] = 's'
          config.build_settings['LLVM_LTO'] = 'YES'
          config.build_settings['PRESERVE_DEAD_CODE_INITS_AND_TERMS'] = 'NO'
          config.build_settings['ALWAYS_EMBED_SWIFT_STANDARD_LIBRARIES'] = 'NO'
          config.build_settings['EMBEDDED_CONTENT_CONTAINS_SWIFT'] = 'NO'
          config.build_settings['LD_VERIFY_BITCODE'] = 'NO'
          config.build_settings['CODE_SIGNING_ALLOWED'] = 'NO'
          config.build_settings['CODE_SIGNING_REQUIRED'] = 'NO'
          config.build_settings['CODE_SIGN_IDENTITY'] = ''
          config.build_settings['OTHER_LDFLAGS'] = ''
          config.build_settings['SWIFT_WHOLE_MODULE_OPTIMIZATION'] = 'NO'
          
          # Remove all build phases
          if target.respond_to?(:build_phases)
            target.build_phases.clear
          end
        else
          # For non-privacy bundle targets
          config.build_settings['ALWAYS_EMBED_SWIFT_STANDARD_LIBRARIES'] = 'YES'
          config.build_settings['BUILD_LIBRARY_FOR_DISTRIBUTION'] = 'YES'
          config.build_settings['DEAD_CODE_STRIPPING'] = 'YES'
          config.build_settings['CLANG_ENABLE_MODULES'] = 'YES'
          config.build_settings['DEFINES_MODULE'] = 'YES'
          config.build_settings['SWIFT_OPTIMIZATION_LEVEL'] = '-O'
        end
      end
    end
    
    # Fix for Xcode 15 resource bundle issue
    installer.aggregate_targets.each do |target|
      target.xcconfigs.each do |variant, xcconfig|
        xcconfig_path = target.client_root + target.xcconfig_relative_path(variant)
        IO.write(xcconfig_path, IO.read(xcconfig_path).gsub("DT_TOOLCHAIN_DIR", "TOOLCHAIN_DIR"))
      end
    end
    
    installer.pods_project.save
  end
end

target 'RunnerTests' do
  inherit! :search_paths
end
